@model IEnumerable<EnterpriseFinancialApp.Models.Transaction>

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"/>


<div class="content-wrapper">

    <section class="container-fluid">

        @{
            ViewBag.Title = "Index";
        }

        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table id="transactionList" class="table table-striped table-bordered">
            <thead>

                <tr>
                    <th>
                        Account
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Entered By
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Void)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Reconciled)
                        </th>*@
                    <th>
                        Reconciled Amount
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonalAccount.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnteredBy.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @item.Date.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Void)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reconciled)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.ReconciledAmount)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.IsDeleted)
                            </td>*@
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </section>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</div>

